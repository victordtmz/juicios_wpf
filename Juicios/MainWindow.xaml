<Window x:Class="Juicios.MainWindow"
				xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
				xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
				xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
				xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
				xmlns:local="clr-namespace:Juicios"
				mc:Ignorable="d"
				Title="ENLACE LLC - JUICIOS"
				Icon="/enlace_balance.ico"
				WindowState="Maximized"
				Height="450"
				Width="800">
	<Window.Resources>
		<!-- DataGrid style -->
		<Style x:Key="DataGridStyle1" TargetType="{x:Type DataGrid}">
			<Setter Property="CellStyle" Value="{DynamicResource DataGridSelectedCellStyle}" />
			<Setter Property="CellStyle" Value="{DynamicResource DataGridCellStyle}" />
		</Style>
		<Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
			<Setter Property="FontSize" Value="14" />
			<!--The border thikness sets the margins-->
			<Setter Property="BorderThickness" Value="10" />
		</Style>
	</Window.Resources>

	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="1*" />
			<ColumnDefinition Width="1*" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="20" />
			<RowDefinition />
		</Grid.RowDefinitions>
		<StackPanel Orientation="Horizontal" Grid.ColumnSpan="2">
			<StackPanel.Resources>
				<Style TargetType="{x:Type Button}">
					<Setter Property="Margin"
									Value="5,0" />
				</Style>
			</StackPanel.Resources>
			<Button Content="Refresh" />
			<Button Content="Abrir Carpeta" />
			<Button Content="Nuevo" />
			<Button Content="Eliminar" />
			<Button Content="Editar" />
			<Button Content="Detalles" />
		</StackPanel>
		<DockPanel Grid.Row="1">
			<StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
				<TextBlock>THIS IS RESERVED FOR FILTER AND OTHER TREE ITEMS</TextBlock>
			</StackPanel>
			<DataGrid x:Name="ExpedientesList" Style="{DynamicResource  DataGridStyle1}" GridLinesVisibility="None" IsReadOnly="True" SelectionChanged="ExpedientesList_SelectionChanged" SelectedItem="{DynamicResource DataGridSelectedCellStyle}" AutoGenerateColumns="False" SelectionMode="Single">
				
				<DataGrid.Resources>
					<Style TargetType="{x:Type DataGridColumnHeader}">
						<Setter Property="Background"
										Value="LightBlue"  />
						<Setter Property="FontWeight"
										Value="Bold" />
						<Setter Property="BorderThickness"
										Value="0,0,1,2" />
						<Setter Property="BorderBrush" Value="Black" />
						<Setter Property="FontSize"
										Value="16" />
						<Setter Property="FontSize" Value="16" />
						<Setter Property="HorizontalContentAlignment" Value="Center" />

					</Style>
				</DataGrid.Resources>
				<DataGrid.Columns>
					<DataGridTextColumn Header="Tipo" Binding="{Binding type}" />
					<DataGridTextColumn Header="Nombre" Binding="{Binding name}" />
					<DataGridTextColumn Header="Activo"
															Binding="{Binding active}"
															Width="*"/>
				</DataGrid.Columns>
			</DataGrid>
			
		</DockPanel>
		<ScrollViewer Grid.Row="1" Grid.Column="1">
			
		</ScrollViewer>
	</Grid>
</Window>
